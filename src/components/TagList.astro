---
import Tag from '../components/Tag.astro';

interface Props {
    tags: string[],
    align?: string
}

const { tags, align = "start" } = Astro.props;


---

<div class="tag-list" tag-list-align={align}>
    {
        tags?.map((tag) => (
            <Tag name={tag} />
        ))
    }
</div>

<style>
    @layer default, layout, specifics, override;
    
    @layer specifics {
        .tag-list {
            display: flex;
            flex-direction: row;
            padding: 1rem;
            flex-wrap: wrap;
            gap: 5px 8px;

            &[tag-list-align="start"] {
                justify-content: start;
            }

            &[tag-list-align="center"] {
                justify-content: center;
            }
        }
    }
</style>