---

import BaseHead from '../components/BaseHead.astro';
import Tags from '../components/AllTags.astro';
import Archive from '../components/Archive.astro';
import Footer from '../components/Footer.astro';
// import PageFind from '../components/PageFind.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead {title} {description} />
	</head>
	<body>
        <!-- <PageFind /> -->
        <div class="content-wrapper">
            <main>
                <slot />
            </main>
            <aside>
                <Tags />
                <Archive />
            </aside>
        </div>
		<Footer />
	</body>
</html>

<style>
    body {
        overflow-x: hidden;
    }

    .content-wrapper {
        display: flex;
        gap: 5px;
        width: 100%;
        padding-top: 3em;
    }

    main {
        display: inline-block;
        width: 100%;
        max-width: 768px;
        margin: 0 auto;
    }

    aside {
        display: none;
    }

    @media (min-width: 768px) {
        main {
            width: 768px;
        }
    }

    @media (min-width: 1200px) {
        .content-wrapper {
            width: 95%;
            margin: 0 auto;
            justify-content: space-between;
        }

        main {
            width: 64%;
            max-width: 1024px;
            flex-shrink: 0;
            flex-grow: 0.7;
        }

        aside {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            justify-content: flex-start;
            align-items: center;
            margin: 0;
            padding: 3rem 1.5rem;
            flex-shrink: 0;
            flex-grow: 0.3;

        }
    }

    

    
</style>